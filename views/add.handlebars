{{>header}}
<section id="add" class="container main" hidden data-auth-required="true">
	
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="row">
				<div class="col-6">
					<button class="btn btn-primary" type="button" name="list"><i class="fa fa-arrow-left" aria-hidden="true"></i> List</button>
				</div>
			</div>
			<br />
			<div class="input-group">
				<span class="input-group-addon" id="addon-username"><i class="fa fa-user-o" aria-hidden="true"></i></span>
				<input class="form-control" type="text" name="username" aria-label="User ID" aria-describedby="addon-username" placeholder="User ID" />
			</div>
			<div class="label-username" hidden><span class="text-danger">Enter User ID</span></div>
			<br />
			<div class="input-group">
				<span class="input-group-addon" id="addon-fingerprint"><i class="fa fa-hand-pointer-o" aria-hidden="true"></i></span>
				<input class="form-control" type="text" name="fingerprint" aria-label="Fingerprint" aria-describedby="addon-fingerprint" placeholder="Fingerprint" />
				<input type="file" hidden name="file-fingerprint" />
			</div>
			<div class="input-or">or</div>
			<div class="input-group">
				<span class="input-group-addon" id="addon-iris"><i class="fa fa-eye" aria-hidden="true"></i></span>
				<input class="form-control" type="text" name="iris" aria-label="iris" aria-describedby="addon-iris" placeholder="Iris" />
				<input type="file" hidden name="file-iris" />
			</div>
			<div class="label-verify" hidden><span class="text-danger">Enter Fingerprint or Iris</span></div>
			<br />
			<div class="text-right">
				<button class="btn btn-primary" type="button" name="add"><i class="fa fa-plus" aria-hidden="true"></i> Add</button>
			</div>
		</div>
	</div>
	<br />

</section>
{{>footer}}
